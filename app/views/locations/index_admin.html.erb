<div class="image_cover">
    <%= image_tag  "https://upload.wikimedia.org/wikipedia/commons/thumb/3/3d/Casa_Classic_Cocktail_Bar_%26_Jazz_Club_by_Roland_Barrera.jpg/1280px-Casa_Classic_Cocktail_Bar_%26_Jazz_Club_by_Roland_Barrera.jpg" %>
</div>
<div class="locations">
    <div class="title">
        <h1> Locations </h1>
    </div>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Nome</th>
            <th scope="col">Long</th>
            <th scope="col">Lat</th>
            <th scope="col">Status</th>
            <th colspan="3"></th>
            </th>
        </thead>

        <tbody>
            <% @locat.each do |loc| %>
                <tr>
                    <td><%= loc.name %></td>
                    <td><%= loc.long %></td>
                    <td><%= loc.lat %> &nbsp;</td>
                    <td><%= loc.status %> &nbsp;</td>
                    <td><%= link_to "Show", location_path(loc.id) %>&nbsp;</td>
                    <td><%= link_to "Edit", edit_location_path(loc.id) %>&nbsp;</td>
                    <td><%= link_to "Destroy", loc, method: :delete, data: { confirm: "Are you sure?" } %>&nbsp;</td>
                </tr>
            <% end %>

        </tbody>
    </table>
    <br/>
    <%=link_to "Accept new Locations",accept_path, class: "btn btn-primary"%>
</div>
