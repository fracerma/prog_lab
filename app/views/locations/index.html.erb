<h1>Questi sono tutti i locali:</h1>

<table>
    <thead>
        <tr>
          <th>Nome</th>
          <th>Long</th>
          <th>Lat</th>
          <th>Categoria</th>
          <th colspan="3"></th>
        </th>
    </thead>

    <tbody>
        <% @location.each do |loc| %>
            <tr>
                <td><%= loc.name %></td>
                <td><%= loc.long %></td>
                <td><%= loc.lat %></td>
            </tr>
         <% end %>
    </tbody>
</table>
