<h1>These are all locations:</h1>

<table>
    <thead>
        <tr>
          <th>Name</th>
          <th>Long</th>
          <th>Lat</th>
          <th colspan="3"></th>
        </th>
    </thead>

    <tbody>
        <% @location.each do |loc| %>
            <tr>
                <td><%= loc.name %></td>
                <td><%= loc.long %></td>
                <td><%= loc.lat %> &nbsp;</td>
                <td><%= link_to "Show", location_path(loc.id) %>&nbsp;</td>
            </tr>
         <% end %>
    </tbody>
</table>
<br/>
<%= link_to "New", new_location_path %>
<% if  $admin == true %>
<br/>
<%= link_to "Home Locations Admin", index_admin_path %>
<%end%>
