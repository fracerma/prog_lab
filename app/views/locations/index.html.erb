<h1>Questi sono tutti i locali:</h1>

<table>
    <thead>
        <tr>
          <th>Nome</th>
          <th>Long</th>
          <th>Lat</th>
          <th colspan="3"></th>
        </th>
    </thead>

    <tbody>
        <% @location.each do |loc| %>
            <tr>
                <td><%= loc.name %></td>
                <td><%= loc.long %></td>
                <td><%= loc.lat %> &nbsp;</td>
                <td><%= link_to "Show", location_path(loc.id) %>&nbsp;</td>
                <td><%= link_to "Edit", edit_location_path(loc.id) %>&nbsp;</td>
                <td><%= link_to "Destroy", loc, method: :delete, data: { confirm: "Are you sure?" } %>&nbsp;</td>
            </tr>
         <% end %>

    </tbody>
</table>
<br/>
<%= link_to "New", new_location_path %>
