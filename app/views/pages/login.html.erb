  <div class="image_cover">
    <%= image_tag  "pub.jpg" %>
  </div>
 <div class="form"> 
  <h1>Login</h1>
  <% flash.each do |type, msg| %>
    <div class="alert">
      <%= msg %>
    </div>
  <% end %>
  <%= form_tag sessions_path do |form| %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email , nil, required: true %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password ,nil, required: true %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login',class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
